<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  
  <servlet>
    <servlet-name>b4oServlet</servlet-name>
    <servlet-class>sonumina.b4oweb.server.B4OServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>b4oServlet</servlet-name>
    <url-pattern>/b4oweb/b4o</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>B4oweb.html</welcome-file>
  </welcome-file-list>

</web-app>
